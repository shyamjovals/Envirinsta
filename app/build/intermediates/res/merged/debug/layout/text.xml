<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF37474F">


    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:id="@+id/r1"
        android:layout_margin="5dp"
        android:background="#fff"
        android:layout_height="70dp">

        <TextView
            android:text="Choose any category"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/textView"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:fontFamily="casual"
            android:textColor="#111"
            android:textAlignment="center"
            android:layout_width="220dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="#fff"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <EditText
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginTop="23dp"
            android:textColor="#111"
            android:background="#fff"
            android:gravity="start"
            android:elevation="6dp"
            android:hint="Your text goes here..."
            android:layout_height="175dp"
            android:padding="5dp"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#111"
            android:layout_below="@+id/editText"
            android:layout_alignLeft="@+id/button_share"
            android:layout_alignStart="@+id/button_share"
            android:layout_marginTop="20dp"
            android:layout_alignRight="@+id/button_share"
            android:layout_alignEnd="@+id/button_share"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/desc"
                android:layout_weight="1"
                android:textColor="#111"
                android:hint="Description" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


